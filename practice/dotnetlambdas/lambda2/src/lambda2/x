public APIGatewayProxyResponse FunctionHandler(APIGatewayProxyRequest request, ILambdaContext context)
        {

           // var abc = JsonConvert.SerializeObject(request);
           
            JObject event = JObject.Parse(request.Body);
            string data=event["event"].ToString();
             switch (event["event"].ToString())
             {
                 case "tolower":
                  data=toupper(data);
                  break;
                   case "toupper":
                  data=tolower(data);
                  break;
                 default:
             }
           var data = new APIGatewayProxyResponse
            {
                StatusCode = 200,
                Headers =
                     new Dictionary<string, string>
                      {
                          { "Content-Type", "application/json" },
                          { "Access-Control-Allow-Origin","*"}
                       },
                Body = data.ToString()
            };
            return data;
        }

        public string toupper(string data)
        {
            return data.ToUpper();
        }
         public string tolower(string data)
        {
            return data.ToLower();
        }